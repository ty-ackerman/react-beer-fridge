div.login
    background: white;
    padding: 20px;
    width: 100%;
    height: 600px;
    box-shadow box-shadow
    position relative


.login .buttonContainer 
    width: 100%;
    position:absolute
    display flex
    flex-flow column wrap
    align-items center
    font-size: 2.5rem;
    bottom: 50px

    
    & button
        width: 50%;
        padding 20px 30px
        color white
        text-transform capitalize
        border: none;
        transition transition
        &.facebook
            background-color fbBlue
            &:hover
                background-color lighten(fbBlue, 20%)
        &.google
            background-color googleRed
            &:hover
                background-color lighten(googleRed, 20%)
        &.twitter
            background-color twitterBlue
            &:hover
                background-color lighten(twitterBlue, 20%)