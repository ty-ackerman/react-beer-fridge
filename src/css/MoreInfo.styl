.more-info-container
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    background rgba(0,0,0,.75)
    z-index 100
    .more-info-content
        width 65%
        margin 100px auto
        background white
        height calc(100vh - 200px)
        padding 50px
        position relative

.close-more-info
    color white
    background red
    border none
    padding 5px 15px
    font-weight bold
    position absolute
    top 3%
    right 3%
    transition transition
    &:hover
        background lighten(red, 25%)

.more-info-content
    z-index 100
    .wrapper
        display flex
        flex-flow row wrap
        justify-content space-between
    .alc-title
        font-size 3rem
    .alc-subtitle
        font-style italic
        text-align center
        margin-bottom 10px
    &-left
        width 35%
        .alc-image-container
            width: 100%
    &-right
        width: 60%
        margin-top 20px
        p
            margin 10px 0
            font-weight bold
            span
                font-weight normal